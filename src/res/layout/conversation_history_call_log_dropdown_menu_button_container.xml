<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@id/call_log_action_container"
    android:paddingBottom="4.0dip"
    android:visibility="visible"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="yes"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:background="?colorDividerLine"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/action_button_container"
        android:paddingTop="4.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textAppearance="@style/Dialer.TextAppearance.Secondary"
            android:gravity="center_horizontal"
            android:id="@id/conversation_history_call_log_button_new_contact"
            android:background="?android:selectableItemBackground"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/add_to_contacts"
            android:drawableTop="@drawable/quantum_ic_person_add_vd_theme_24"
            android:drawablePadding="4.0dip"
            android:layout_weight="1.0"
            android:textAlignment="gravity"
            android:drawableTint="?android:textColorSecondary" />
        <TextView
            android:textAppearance="@style/Dialer.TextAppearance.Secondary"
            android:gravity="center_horizontal"
            android:id="@id/conversation_history_call_log_button_unblock"
            android:background="?android:selectableItemBackground"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/conversation_history_button_unblock"
            android:drawableTop="@drawable/quantum_ic_unblock_vd_theme_24"
            android:drawablePadding="4.0dip"
            android:layout_weight="1.0"
            android:textAlignment="gravity"
            android:drawableTint="?android:textColorSecondary" />
        <TextView
            android:textAppearance="@style/Dialer.TextAppearance.Secondary"
            android:gravity="center_horizontal"
            android:id="@id/conversation_history_call_log_button_voice_call"
            android:background="?android:selectableItemBackground"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/call"
            android:drawableTop="@drawable/ic_voice_call"
            android:drawablePadding="4.0dip"
            android:layout_weight="1.0"
            android:textAlignment="gravity"
            android:drawableTint="?android:textColorSecondary" />
        <TextView
            android:textAppearance="@style/Dialer.TextAppearance.Secondary"
            android:gravity="center_horizontal"
            android:id="@id/conversation_history_call_log_button_video_call"
            android:background="?android:selectableItemBackground"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/call_log_action_video_call"
            android:drawableTop="@drawable/quantum_ic_videocam_vd_theme_24_white"
            android:drawablePadding="4.0dip"
            android:layout_weight="1.0"
            android:textAlignment="gravity"
            android:drawableTint="?android:textColorSecondary" />
        <TextView
            android:textAppearance="@style/Dialer.TextAppearance.Secondary"
            android:gravity="center_horizontal"
            android:id="@id/conversation_history_call_log_button_message"
            android:background="?android:selectableItemBackground"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/send_a_message"
            android:drawableTop="@drawable/quantum_ic_message_vd_theme_24"
            android:drawablePadding="4.0dip"
            android:layout_weight="1.0"
            android:textAlignment="gravity"
            android:drawableTint="?android:textColorSecondary" />
        <TextView
            android:textAppearance="@style/Dialer.TextAppearance.Secondary"
            android:gravity="center_horizontal"
            android:id="@id/conversation_history_call_log_button_rtt"
            android:background="?android:selectableItemBackground"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/call_log_action_rtt_call"
            android:drawableTop="@drawable/quantum_ic_rtt_vd_theme_24"
            android:drawablePadding="4.0dip"
            android:layout_weight="1.0"
            android:textAlignment="gravity"
            android:drawableTint="?android:textColorSecondary" />
        <TextView
            android:textAppearance="@style/Dialer.TextAppearance.Secondary"
            android:gravity="center_horizontal"
            android:id="@id/conversation_history_call_log_button_history"
            android:background="?android:selectableItemBackground"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/conversation_history_button_history"
            android:drawableTop="@drawable/quantum_ic_history_vd_theme_24"
            android:drawablePadding="4.0dip"
            android:layout_weight="1.0"
            android:textAlignment="gravity"
            android:drawableTint="?android:textColorSecondary" />
    </LinearLayout>
</LinearLayout>