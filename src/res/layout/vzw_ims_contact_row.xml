<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/row_height"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        layout="@layout/vzw_ims_header" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/click_target"
        android:background="?android:selectableItemBackground"
        android:paddingTop="@dimen/row_top_bottom_padding"
        android:paddingBottom="@dimen/row_top_bottom_padding"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingStart="@dimen/vzw_ims_row_start_padding"
        android:layout_marginStart="@dimen/vzw_ims_header_width"
        android:layout_marginEnd="@dimen/vzw_ims_row_end_margin">
        <QuickContactBadge
            android:id="@id/photo"
            android:clickable="false"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size" />
        <com.android.dialer.widget.BidiTextView
            android:textSize="@dimen/text_size"
            android:textColor="?android:textColorPrimary"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:maxLines="1"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/vzw_ims_text_padding_start"
            android:paddingEnd="@dimen/text_padding_end" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="86.0dip"
        android:layout_height="fill_parent"
        android:layout_marginEnd="@dimen/vzw_ims_list_row_end_margin">
        <ImageView
            android:id="@id/contact_video_button"
            android:background="?android:selectableItemBackgroundBorderless"
            android:visibility="visible"
            android:layout_width="@dimen/call_back_button_size"
            android:layout_height="fill_parent"
            android:src="@drawable/quantum_ic_videocam_vd_theme_24"
            android:scaleType="center"
            android:tint="?colorIcon"
            android:layout_centerVertical="true"
            android:contentDescription="@string/call"
            android:paddingEnd="@dimen/text_padding_end" />
        <ImageView
            android:id="@id/contact_voice_button"
            android:background="?android:selectableItemBackgroundBorderless"
            android:visibility="visible"
            android:layout_width="@dimen/call_back_button_size"
            android:layout_height="fill_parent"
            android:src="@drawable/quantum_ic_call_white_24"
            android:scaleType="center"
            android:tint="?colorIcon"
            android:layout_centerVertical="true"
            android:contentDescription="@string/call"
            android:paddingEnd="@dimen/text_padding_end" />
    </LinearLayout>
</FrameLayout>