<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="32.0dip"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:paddingStart="48.0dip"
            android:paddingEnd="48.0dip">
            <TextView
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
                android:gravity="center"
                android:id="@id/headerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_email_title"
                android:lines="2"
                android:accessibilityLiveRegion="polite" />
            <TextView
                android:gravity="center"
                android:id="@id/hintText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_email"
                android:lines="2" />
            <TextView
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:id="@id/first_errorText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="2" />
            <EditText
                android:textSize="24.0sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/first_email_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_email"
                android:inputType="textEmailAddress" />
            <TextView
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:id="@id/second_errorText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="2" />
            <EditText
                android:textSize="24.0sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/second_email_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/second_email"
                android:inputType="textEmailAddress" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/cancel_button"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button"
            android:layout_weight="1.0"
            style="?android:buttonBarButtonStyle" />
        <Button
            android:id="@id/update_button"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/update_button"
            android:layout_weight="1.0"
            style="?android:buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>