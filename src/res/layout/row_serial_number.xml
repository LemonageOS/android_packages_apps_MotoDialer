<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?dialogPreferredPadding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@id/serial_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serial_number"
        style="@style/DeviceIdTitle" />
    <TextView
        android:id="@id/serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        style="@style/DeviceIdInfo" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@id/serial_number_barcode"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/barcode_height"
        android:layout_margin="8.0dip" />
</LinearLayout>