<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:gravity="center"
        android:id="@id/loading_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ProgressBar
            android:id="@id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:layout_below="@id/progressbar" />
    </RelativeLayout>
    <ScrollView
        android:orientation="vertical"
        android:id="@id/greeting_selection_layout"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip">
            <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="20.0dip"
                android:text="@string/greetings_info" />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/custom_greeting_layout"
                android:background="?android:colorBackground"
                android:paddingBottom="10.0dip"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@id/radio_custom_gr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/custom_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@id/custom_greeting_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_custom"
                        style="@style/Dialer.TextAppearance.Primary" />
                    <TextView
                        android:id="@id/custom_greeting_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/greeting_custom_description"
                        style="@style/Dialer.TextAppearance.Secondary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="90.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip">
                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@id/custom_play_button"
                        android:background="?android:colorBackground"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/ic_play_circle_filled_googblue_48dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:contentDescription="@string/play"
                        style="@android:style/Widget.Material.Light.ImageButton" />
                    <TextView
                        android:gravity="center"
                        android:id="@id/custom_playback_progress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        style="@style/Dialer.TextAppearance.Secondary" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/name_greeting_layout"
                android:background="?android:colorBackground"
                android:paddingBottom="10.0dip"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@id/radio_name_gr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/name_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@id/name_greeting_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_name"
                        style="@style/Dialer.TextAppearance.Primary" />
                    <TextView
                        android:id="@id/name_greeting_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/greeting_name_description"
                        style="@style/Dialer.TextAppearance.Secondary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="90.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip">
                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@id/name_play_button"
                        android:background="?android:colorBackground"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/ic_play_circle_filled_googblue_48dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:contentDescription="@string/play"
                        style="@android:style/Widget.Material.Light.ImageButton" />
                    <TextView
                        android:gravity="center"
                        android:id="@id/name_playback_progress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        style="@style/Dialer.TextAppearance.Secondary" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/default_greeting_layout"
                android:background="?android:colorBackground"
                android:paddingBottom="10.0dip"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@id/radio_phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/default_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@id/default_greeting_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/greeting_phone_no"
                        style="@style/Dialer.TextAppearance.Primary" />
                    <TextView
                        android:id="@id/default_greeting_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/default_greeting_description"
                        style="@style/Dialer.TextAppearance.Secondary" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:id="@id/greetings_note_view"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0dip"
                android:text="@string/greetings_note" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:id="@id/edit_greeting_layout"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/button_record"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/greeting_record"
            android:layout_weight="1.0"
            android:onClick="handleButtonClick"
            style="?android:buttonBarButtonStyle" />
        <Button
            android:id="@id/button_activate"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/greeting_activate"
            android:layout_weight="1.0"
            android:onClick="handleButtonClick"
            style="?android:buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>