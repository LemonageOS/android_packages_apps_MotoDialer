<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@id/bottom_action_container"
    android:background="@color/alert_dialog_bg"
    android:paddingBottom="@dimen/bottom_action_container_padding_bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/bottom_button_margin_between"
    android:paddingEnd="@dimen/bottom_button_margin_between"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@id/rtt_button_container"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <ImageView
            android:id="@id/rtt_button_image"
            android:background="@drawable/circle_background"
            android:padding="@dimen/bottom_circle_button_larger_tap_target_padding"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            android:layout_marginBottom="10.0dip"
            android:src="@drawable/quantum_ic_rtt_vd_theme_24"
            android:scaleType="center"
            android:tint="?android:textColorSecondary"
            android:contentDescription="@string/rtt_call_desc" />
        <TextView
            android:id="@id/rtt_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4.0dip"
            android:text="@string/conversation_history_button_rtt_call"
            style="@style/Dialer.TextAppearance.Secondary.Ellipsize" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@id/voice_button_container"
        android:background="@drawable/prc_audio_button_save_bg"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="12.0dip"
        android:layout_weight="1.0"
        android:backgroundTint="@color/dialer_call_green">
        <LinearLayout
            android:padding="@dimen/bottom_circle_button_larger_tap_target_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/voice_button_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bottom_circle_button_larger_tap_target_padding"
                android:src="@drawable/prc_ic_phone"
                android:scaleType="center"
                android:tint="@color/prc_button_text_history_call_color"
                android:contentDescription="@string/conversation_history_button_voice_call" />
            <TextView
                android:textColor="@color/prc_button_text_history_call_color"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/voice_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conversation_history_button_voice_call"
                style="@style/Dialer.TextAppearance.Secondary.Ellipsize" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@id/video_button_container"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <ImageView
            android:id="@id/video_button_image"
            android:background="@drawable/circle_background"
            android:padding="@dimen/bottom_circle_button_larger_tap_target_padding"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            android:layout_marginBottom="10.0dip"
            android:src="@drawable/quantum_ic_videocam_vd_theme_24"
            android:scaleType="center"
            android:tint="?android:textColorSecondary"
            android:contentDescription="@string/conversation_history_button_video_call" />
        <TextView
            android:id="@id/start_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4.0dip"
            android:text="@string/conversation_history_button_video_call"
            style="@style/Dialer.TextAppearance.Secondary.Ellipsize" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@id/message_button_container"
        android:background="@drawable/prc_audio_button_save_bg"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="12.0dip"
        android:layout_weight="1.0">
        <LinearLayout
            android:padding="@dimen/bottom_circle_button_larger_tap_target_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@id/message_button_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bottom_circle_button_larger_tap_target_padding"
                android:src="@drawable/quantum_ic_message_vd_theme_24"
                android:scaleType="center"
                android:tint="@color/prc_button_text_history_msg_color"
                android:contentDescription="@string/conversation_history_button_message" />
            <TextView
                android:textColor="@color/prc_button_text_history_msg_color"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/message_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conversation_history_button_message"
                style="@style/Dialer.TextAppearance.Secondary.Ellipsize" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>