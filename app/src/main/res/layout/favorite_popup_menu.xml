<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/favorite_popup_menu"
    android:layout_width="190.0dip"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/contact_number_container"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="11.0sp"
            android:textStyle="bold"
            android:layout_gravity="start|center"
            android:id="@id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="6.0dip"
            style="@style/Dialer.TextAppearance.Secondary2" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/voice_call_container"
        android:background="?android:selectableItemBackground"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip">
        <ImageView
            android:layout_gravity="start|center"
            android:id="@id/voice_call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quantum_ic_call_vd_theme_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:tint="?colorIcon" />
        <TextView
            android:layout_gravity="start|center"
            android:id="@id/voice_call_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_voice_call"
            android:layout_marginStart="16.0dip"
            style="@style/Dialer.TextAppearance.Primary" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/message_container"
        android:background="?android:selectableItemBackground"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip">
        <ImageView
            android:layout_gravity="start|center"
            android:id="@id/message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quantum_ic_message_white_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:tint="?colorIcon" />
        <TextView
            android:layout_gravity="start|center"
            android:id="@id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_message"
            android:layout_marginStart="16.0dip"
            style="@style/Dialer.TextAppearance.Primary" />
    </LinearLayout>
    <View
        android:id="@id/favorite_menu_list_divider"
        android:background="?colorDividerLine"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="1.0dip"
        android:layout_marginBottom="1.0dip"
        android:layout_marginStart="12.0dip" />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/remove_container"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip">
        <ImageView
            android:layout_gravity="start|center"
            android:id="@id/remove_favorite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_close_24px"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:tint="?colorIcon" />
        <TextView
            android:layout_gravity="start|center"
            android:id="@id/remove_favorite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_remove"
            android:layout_marginStart="16.0dip"
            style="@style/Dialer.TextAppearance.Primary" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/contact_info_container"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip">
        <ImageView
            android:layout_gravity="start|center"
            android:id="@id/favorite_contact_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_person_outline_24px"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:tint="?colorIcon" />
        <TextView
            android:layout_gravity="start|center"
            android:id="@id/favorite_contact_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_contact_info"
            android:layout_marginStart="16.0dip"
            style="@style/Dialer.TextAppearance.Primary" />
    </LinearLayout>
</LinearLayout>