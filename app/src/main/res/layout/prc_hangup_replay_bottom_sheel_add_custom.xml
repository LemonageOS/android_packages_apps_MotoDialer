<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/prc_greeting_dialog_title_hight"
        android:layout_marginTop="@dimen/prc_greeting_dialog_title_margin_top"
        android:layout_marginBottom="@dimen/prc_greeting_dialog_title_margin_bottom">
        <TextView
            android:textSize="@dimen/prc_greeting_dialog_save_text_size"
            android:textColor="@color/bubble_highlight_item"
            android:gravity="center"
            android:id="@id/tv_add_custom_reply"
            android:paddingLeft="24.0dip"
            android:paddingRight="24.0dip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/prc_greeting_dialog_back_size"
            android:text="@string/call_incoming_message_custom"
            android:drawableLeft="@drawable/prc_ic_greeting_add"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:drawableTint="@color/bubble_highlight_item" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_space"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip" />
</LinearLayout>