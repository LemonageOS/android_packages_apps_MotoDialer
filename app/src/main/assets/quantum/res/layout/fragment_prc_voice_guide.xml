<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorSecondary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/tab_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/prc_voicemail_tips_img_height"
                android:layout_height="@dimen/prc_voicemail_tips_img_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/prc_voicemail_img_margin_top" />

            <TextView
                android:id="@+id/tv_tipsTitle"
                style="@style/Prc_Voicemail_Guide_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/prc_voicemail_tips_title_margin_top"
                android:layout_marginBottom="@dimen/prc_voicemail_tips_title_margin_bottom"
                android:gravity="center"
                android:textColor="@color/prc_text_primary_color" />

            <TextView
                android:id="@+id/tv_content"
                style="@style/Prc_Voicemail_Guide_Content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:scrollbars="vertical"
                android:layout_marginBottom="@dimen/prc_voice_guide_text_magin_bottom"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>